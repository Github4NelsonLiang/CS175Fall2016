<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="edu.sjsu.fall2016.cs175.fragmentdemo.Pokedex"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TableRow
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pikachu"
                    android:scaleType="fitCenter"
                    android:tag="pikachu"
                    android:src="@drawable/pikachu"
                    android:onClick="showDetail"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:id="@+id/jigglypuff"
                    android:tag="jigglypuff"
                    android:src="@drawable/jigglypuff"
                    android:onClick="showDetail"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:id="@+id/scraggy"
                    android:tag="infernape"
                    android:src="@drawable/scraggy"
                    android:onClick="showDetail"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:id="@+id/infernape"
                    android:tag="infernape"
                    android:src="@drawable/infernape"
                    android:onClick="showDetail"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:id="@+id/squirtle"
                    android:tag="infernape"
                    android:src="@drawable/squirtle"
                    android:onClick="showDetail"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:id="@+id/bulbasaur"
                    android:tag="infernape"
                    android:src="@drawable/bulbasaur"
                    android:onClick="showDetail"/>
            </TableRow>
        </TableLayout>


</LinearLayout>
